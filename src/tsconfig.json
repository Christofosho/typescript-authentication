{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es2022",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "jsx": "react"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "test"],
  "files": [
    "server/server.ts",
    "common/verify.ts",
  ]
}